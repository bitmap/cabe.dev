{
  "processors": [
    "stylelint-processor-html"
  ],
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "./**/*.js",
    "./src/**/*.html"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "extend"
        ]
      }
    ]
  }
}
